    LastName:
      fake: last_name
    company:
      fake: Company
    title:
      fake.text:
        max_nb_chars: 15
    email:
      fake: email
    phone:
      fake: phone_number
    MobilePhone:
      fake: phone_number
    Street:
      fake: StreetAddress
    City:
      fake: City
    State:
      fake: State
    PostalCode:
      fake: PostalCode
    Country:
      fake: Country
    NumberOfEmployees:
      random_number:
        min: 0
        max: 10000
    Status:
      random_choice:
        Open: 40%
        Working: 20%
        Nurturing: 20%
        Qualified: 10%
        Unqualified: 10%

- object: Campaign
  count: 10
  fields:
    Name: ${{fake.Text(max_nb_chars = 25)}}
    IsActive: TRUE
    Status:
      random_choice:
        - In Progress
        - Completed
        - Aborted
        - Planned
    StartDate:
      date_between:
          start_date: -1y
          end_date: +1y
    EndDate:
      date_between:
          start_date: ${{StartDate}}
          end_date: +1y
  friends: 
    - object: CampaignMember
      count: 3
      fields:
        CampaignId:
          reference: Campaign
        ContactId:
          random_reference: Contact
        Status: Sent
